		// 유형2	
		ArrayList<Polygon> arrPoly = new ArrayList<>();
		
		Polygon poly = new Triangle(50, 80);
		System.out.println("넓이는 : " + poly.evaluate());
		arrPoly.add(poly);
		
		poly = new Square(50, 80);
		System.out.println("넓이는 : " + poly.evaluate());
		arrPoly.add(poly);
		
		poly = new Trapezoid(50, 80, 60);
		System.out.println("넓이는 : " + poly.evaluate());
		arrPoly.add(poly);
		
		
		// 유형3
